html
 head
  link(rel="stylesheet" href="public/bootstrap-3.3.6-dist/css/bootstrap.min.css")

  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  title Device Configurations
 body
  div(class="container")
   div(class="page-header")
    h2 Awaiting approval:
    each waitingdevice in waitingdevices
     form(class="form-horizontal" method="POST" action="/deviceconfig/#{waitingdevice.id}")
      div(class="form-group")
       label(for="inputDeviceId" class="col-sm-2 control-label") Device ID
       div(class="col-sm-10")
        input(name="deviceId" type="text" class="form-control" id="inputDeviceId" value="#{waitingdevice.id}" disabled required="true")
      div(class="form-group")
       label(for="inputDeviceName" class="col-sm-2 control-label") Device Name
       div(class="col-sm-10")
        input(name="deviceName" type="text" class="form-control" id="inputDeviceName" required="true")
      div(class="form-group")
       div(class="col-sm-offset-2 col-sm-10")
        button(type="submit" class="btn btn-primary") Approve

    h2 Approved:
    each device in devices
     form(class="form-horizontal" method="POST")
      div(class="form-group")
       label(for="inputDeviceId" class="col-sm-2 control-label") Device ID
       div(class="col-sm-10")
        input(name="deviceId" type="text" class="form-control" id="inputDeviceId" value="#{device.id}" disabled required="true")
      div(class="form-group")
       label(for="inputDeviceName" class="col-sm-2 control-label") Device Name
       div(class="col-sm-10")
        input(name="deviceName" type="text" class="form-control" id="inputDeviceName" value="#{device.name}" required="true")
      div(class="form-group")
       div(class="col-sm-offset-2 col-sm-10")
        a(type="button" class="btn btn-danger" href="/deviceconfig/#{device.id}/delete") Delete

  script(src="public/jquery.min.js")
  script(src="public/bootstrap-3.3.6-dist/js/bootstrap.min.js")
