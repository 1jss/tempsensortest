html
 head
  link(rel="stylesheet" href="public/bootstrap-3.3.6-dist/css/bootstrap.min.css")
  link(rel="apple-touch-icon" href="public/images/touch-icon-iphone.png")
  link(rel="apple-touch-icon" sizes="76x76" href="public/images/touch-icon-ipad.png")
  link(rel="apple-touch-icon" sizes="120x120" href="public/images/touch-icon-iphone-retina.png")
  link(rel="apple-touch-icon" sizes="152x152" href="public/images/touch-icon-ipad-retina.png")
  meta(name="apple-mobile-web-app-capable" content="yes")
  meta(name="apple-mobile-web-app-status-bar-style" content="white")
  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  title Power Consumption
 body
  div(class="container")
   div(class="page-header")
    h1 Last hour: #{hour_consumption} kWh
    h1 total #{day}: #{day_consumption} kWh
    h1 total week: #{week_consumption} kWh
    h1 total #{month}: #{month_consumption} kWh
    h1 total #{year}: #{year_consumption} kWh

   canvas(id="myChart" style="width:100%; height:400px")

  script(src="public/jquery.min.js")
  script(src="public/q.js")
  script(src="public/bootstrap-3.3.6-dist/js/bootstrap.min.js")
  script(src="public/Chart.js")
  script(src="public/powerApp.js")
