html
 head
  link(rel="stylesheet" href="public/bootstrap-3.3.6-dist/css/bootstrap.min.css")

  meta(charset="utf-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  title Configuration
 body
  div(class="container")
   div(class="page-header")
    h1(id="current") Configuration:

   form(class="form-horizontal" method="POST")
    div(class="form-group")
     label(for="inputUsername" class="col-sm-2 control-label") Username
     div(class="col-sm-10")
      input(name="username" type="text" class="form-control" id="inputUsername" value="#{username}" placeholder="46 Elks username")
    div(class="form-group")
     label(for="inputPassword" class="col-sm-2 control-label") Password
     div(class="col-sm-10")
      input(name="password" type="password" class="form-control" id="inputPassword" value="#{password}" placeholder="46 Elks password")
    div(class="form-group")
     div(class="col-sm-offset-2 col-sm-10")
      button(type="submit" class="btn btn-primary") Save

  script(src="public/jquery.min.js")
  script(src="public/bootstrap-3.3.6-dist/js/bootstrap.min.js")
